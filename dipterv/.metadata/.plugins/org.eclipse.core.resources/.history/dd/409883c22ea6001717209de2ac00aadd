package com.sample
 
import com.sample.DroolsTest.LogItem;
import com.sample.TimeSerieClassifier;
 
rule "critical"
    when
        LogItem(item : getLogItem())
        eval(TimeSerieClassifier.isCritical(item))
    then
        System.out.println( "kritikus" );
end

rule "normal"
    when
        LogItem(item : getLogItem())
        eval(!TimeSerieClassifier.isCritical(item))
    then
        System.out.println( "kritikus" );
end

