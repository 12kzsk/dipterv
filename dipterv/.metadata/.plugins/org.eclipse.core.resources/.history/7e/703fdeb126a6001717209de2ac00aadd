package com.sample
 
import com.sample.DroolsTest.TimeSerie;
 
rule "TS"
    when
        item : LogItem()
        TimeSerieClassifier.isCritical(item.getLogItem())
    then
        System.out.println( ts.getData() );
        ts.setData( "Goodbye cruel world" );
        update( ts );
        System.out.println( ts.getData() );
end

