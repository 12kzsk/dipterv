package com.sample
 
import com.sample.DroolsTest.LogItem;
import com.sample.TimeSerieClassifier;
 
rule "TS"
    when
        LogItem(item : getLogItem())
        TimeSerieClassifier.isCritical(item)
    then
        System.out.println( ts.getData() );
        ts.setData( "Goodbye cruel world" );
        update( ts );
        System.out.println( ts.getData() );
end

